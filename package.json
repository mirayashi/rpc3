{
  "name": "rpc3",
  "version": "1.0.0",
  "description": "A PoC for decentralized remote procedure calls leveraging IPFS and privacy-enabled blockchain",
  "scripts": {
    "postinstall": "cross-env HH_EXCLUDE_TASKS=1 npm -w sc run compile:clean && npm -w packages/common run generated:copy && tsc --build",
    "clean": "npm --workspaces --if-present run clean",
    "eslint": "npm --workspaces --if-present run eslint",
    "wallet:gen": "node walletGen.cjs"
  },
  "keywords": [
    "rpc3",
    "web3",
    "decentralized",
    "IPFS",
    "blockhain",
    "standard",
    "privacy",
    "oasis",
    "sapphire"
  ],
  "author": "Mirayashi",
  "license": "MIT",
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/lodash": "^4.14.197",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "rimraf": "^5.0.1"
  },
  "dependencies": {
    "@oasisprotocol/sapphire-paratime": "^1.1.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "fs-extra": "^11.1.1",
    "kubo-rpc-client": "^3.0.1",
    "promised-sqlite3": "^2.1.0"
  },
  "workspaces": [
    "app-types/*",
    "apps/*",
    "packages/*",
    "sc"
  ]
}
